<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/dacingscript</item>
        <item name="colorPrimary">@color/chocolate_brown</item>
        <item name="colorAccent">@color/butter_cream</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="toast_style">
        <item name="colorBackground">#FFFFFF</item>
        <item name="textColor">#663419</item>
        <item name="iconLeft">@drawable/ic_cake</item>
        <item name="strokeColor">#663419</item>
        <item name="strokeWidth">2dp</item>
        <item name="length">SHORT</item>
    </style>
</resources>
